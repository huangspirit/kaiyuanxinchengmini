/* pages/factoryDirect/factoryDirect.wxss */

.factoryBanner {
  width: 100%;
  height: 330rpx;
  padding: 20rpx 20rpx 30rpx 20rpx;
}

.factoryBanner>image {
  width: 100%;
  height: 100%;
}
.factoryDirect {
  width: 100%;
}

.factoryDirect>view {
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
  background: #f5f5f5;
  padding: 0 20rpx;
  font-weight: bold;
  box-sizing: border-box;
}

.factoryDirect>text {
  width: 100%;
  height: 100rpx;
  color: #333;
  line-height: 100rpx;
  padding: 0 20rpx;
  display: block;
  background: #fff;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f5f5f5;
}
