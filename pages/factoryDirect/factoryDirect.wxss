/* pages/factoryDirect/factoryDirect.wxss */

.custom {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  height: 130rpx;
  z-index: 999;
  background: #fff;
  padding: 0 20rpx;
}

.custom .navInput {
  float: left;
  margin-top: 16rpx;
  width: 530rpx;
  height: 58rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding-left: 30rpx;
  background: #eee;
  border-radius: 40rpx;
  position: relative;
}

.custom .navInput input {
  width: 100%;
  height: 58rpx;
  background: #eee;
  font-size: 22rpx;
}

.empty_custom {
  width: 100%;
  margin-top: 160rpx;
}

.specialList {
  padding: 0 30rpx;
}

.listContent {
  display: flex;
  margin-top: 15rpx;
}

.listContent .list_left image {
  width: 220rpx;
  height: 210rpx;
  background: rgba(243, 243, 243, 1);
  border-radius: 8px;
}

.listContent .list_right {
  margin-left: 27rpx;
  width: 100%;
}

.listContent .list_right>text:nth-of-type(1) {
  font-size: 26rpx;
  font-family: PingFangSC-Medium;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 37rpx;
  display: block;
}

.listContent .list_right>text:nth-of-type(2) {
  margin: 3rpx 0 9rpx 0;
  font-size: 18rpx;
  word-break: keep-all;
  word-wrap: break-word;
  color: rgba(153, 153, 153, 1);
  line-height: 25rpx;
  display: block;
}

.listContent .list_right>speciStatus {
  display: block;
  line-height: 25rpx;
}

.listContent .list_right .speciStatus text {
  font-size: 16rpx;
  color: rgba(227, 99, 70, 1);
  border-radius: 2rpx;
  padding: 0 7rpx;
}

.listContent .list_right>view {
  display: flex;
}