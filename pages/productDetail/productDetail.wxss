  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.canui-foor-fixed {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.canui-tabbar-bottom {
  padding-bottom: 20rpx;
  min-height: 150rpx;
}
.goodsPurchase{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goodsPurchase>text{
  flex:1;
  white-space: nowrap;
  line-height: 0.5;
  height:50rpx;
}
.goodsPurchase .btnwrap{
  display: flex;
  flex: 1;
  line-height: 1;
}
