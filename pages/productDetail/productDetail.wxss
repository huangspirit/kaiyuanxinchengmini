.merChantList {
  width: 100%;
  background: #fff;
}

.merChantList .merchantTitle {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
  background: #d5d5d5;
}

.merChantList .merchantTitle>image {
  width: 80rpx;
  height: 80rpx;
  margin: 5rpx 20rpx 0 0;
  float: left;
  border-radius: 50%;
}

.merChantList .merchantTitle>text:nth-child(2) {
  float: left;
}

.merChantList .merchantTitle>text:nth-child(3) {
  float: right;
  background: #f40;
  color: #fff;
  font-size: 25rpx;
  padding: 4rpx 15rpx;
  border-radius: 10rpx;
  height: 45rpx;
  line-height: 45rpx;
  margin-top: 21rpx;
}

.merChantList .merchantDetail {
  display: flex;
  justify-content: space-between;
}

.merChantList .merchantDetail:nth-child(2n) {
  background: #fafafa;
}

.merChantList .merchantDetail>text {
  width: 50%;
  border-left: 1px solid #ebeef5;
  border-bottom: 1px solid #ebeef5;
  min-height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}

.merChantList .merchantDetail>view {
  width: 50%;
  border-left: 1px solid #ebeef5;
  border-bottom: 1px solid #ebeef5;
  min-height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}

.merChantList .merchantDetail>view .productEdit {
  background: #4a5a6a;
  color: #fff;
  font-size: 24rpx;
  cursor: pointer;
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.productParams {
  display: flex;
  justify-content: space-between;
  background: #fff;
}

.productParams:nth-child(2n) {
  background: #fafafa;
}

.productParams>text {
  width: 50%;
  border-left: 1px solid #ebeef5;
  border-bottom: 1px solid #ebeef5;
  min-height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}

.cu-bar.tabbar.shop .action {
  width: 100rpx;
}

.cu-bar.tabbar .action {
  font-size: 20rpx;
}

.cu-bar.tabbar .action [class*="icon"] {
  width: 38rpx;
}

