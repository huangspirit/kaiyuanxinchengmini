/* pages/productDetail/productDetail.wxss */

.productDetailPic {
  width: 100%;
  height: 320rpx;
  text-align: center;
  background: #fff;
}
.productDetailPic >image {
  width: 600rpx;
  height:320rpx;
}
.brandComponey .brandTitle {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  font-weight: bold;
  padding: 0 20rpx;
  background: #fff;
  margin-bottom: 2rpx;
  text-align: center;
}

.brandDetail {
  background: #fff;
  padding: 10rpx 20rpx;
}

.brandDetail>text {
  display: block;
  margin-top:8rpx;
  font-size: 28rpx;
}

.brandDetail>.name {
  font-size: 32rpx;
  font-weight: bold;
}
.brandDetail>.desc{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.brandDetail .goodsLabel {
  padding: 5rpx 0;
  display: flex;
  justify-content: space-between;
  align-content: center;
  border-bottom: 2rpx dashed #bcbcbc;
  margin-top:10rpx;
}
.brandDetail .goodsLabel .mark{
  padding-top:10rpx;
}
.brandDetail .goodsLabel .mark text{
  border:1px solid #ddd;
  padding:2rpx 20rpx;
  border-radius: 3rpx;
  margin-right:8rpx;
}
.brandDetail .goodsLabel .productFocus{
  display: flex;
  align-items: center;
}
.brandDetail .goodsLabel .productFocus image{
  height:35rpx;
  width:35rpx;
  margin-right:15rpx;
  vertical-align: middle;
}
.brandDetail .goodsLabel .productFocus>.share{
  margin-left:20rpx;
}

.brandDetail .goodsLabel .productFocus>.share>button {
  background: #fff;
  padding: 0;
  border-radius: 0;
  font-size:24rpx;
}

.brandDetail .goodsLabel .productFocus>.share>button::after {
  border: none;
}

.specile .specileTitle {
  text-align: center;
  font-size: 24rpx;
  line-height:60rpx;
  background:#fff;
}

.specile .specileList {
 border-bottom:15rpx solid #fff;
}
.specile .specileList .listContent {
  display: flex;
  flex-direction: column;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}

.specile .specileList .listContent>.listTitle {
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx dashed #bcbcbc;
}

.specile .specileList .listContent>.listTitle .tag {
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 13rpx;
  border-radius: 8rpx;
 margin-left:8rpx;
}
.specile .specileList .listTitle .purchase{
  padding:2rpx 8rpx;
  border-radius: 8rpx;
}
.specile .specileList .listContent>.listTitle .img {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 20rpx;
  border-radius: 50rpx;
}
.specile .specileList .listContent .count{
  display:flex;
 justify-content: space-between;
  align-items: center;
}
.specile .specileList .listContent .listDetail {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.specile .specileList .listContent .listDetail .listLeft {
  font-size: 26rpx;
  white-space: wrap;
  line-height: 50rpx;
}
.specile .specileList .listContent .listDetail .listLeft .right{
  float: right;
}
.specile .specileList .listContent .listDetail .listRight .price {
  font-size: 30rpx;
  margin-top:15rpx;
}

.specile .specileList .listContent .listDetail .listRight .bill {
  font-size: 18rpx;
  margin: 5rpx 0 15rpx 0;
}

