/* pages/releaseSale/releaseSale.wxss */

.radioSquare {
  display: flex;
  flex: 1;
}

.radioSquare>view {
  margin-right: 60rpx;
}

.radioSquare>view:last-child {
  margin-right: 0;
}

.radioSquare>view>.checked {
  margin-right: 15rpx;
}

.cu-form-group picker .picker {
  text-align: left;
}

.title {
  width: 210rpx;
}

.cu-form-group {
  margin-top: 10rpx;
}

.leverPrice {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 20rpx 0;
}

.leverPrice .leverReset {
  width: 100%;
  background: #df3f2f;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  display: block;
  color: #fff;
   border-radius: 8rpx;
}

.leverPrice .leverList {
  display: flex;
  flex-direction: column;
}

.leverPrice .leverList>view {
  display: flex;
  margin: 15rpx 0;
}

.leverPrice .leverList>view>view {
  display: flex;
}
.leverPrice .leverList>view>view:nth-of-type(1)>text {
  padding-right:15rpx;
}
.leverPrice .leverList>view>view:nth-of-type(2)>text {
  padding: 0 15rpx;
}

.leverPrice .leverList>view>view>input {
  border: 2rpx solid #dcdcdc;
  border-radius: 8rpx;
}

.footerBtn {
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  background: #df3f2f;
 
}

.footerBtn:active {
  background: rgba(223, 63, 47, 0.8);
}
