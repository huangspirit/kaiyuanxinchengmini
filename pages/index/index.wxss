/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.authorization>text {
    font-size: 30rpx;
    color: #333;
}
.authorization>button {
  width: 80%;
  margin-top: 40rpx;
  position: fixed;
  bottom: 100rpx;
  left: 10%;
  background: #0068db;
  color: #fff;
}
.authorization>button:active {
  background: rgba(0, 0, 255, .8)
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  margin-bottom: 50rpx;
}
.userinfo>.desc {
  line-height: 45rpx;
}
.userinfo>.confirm {
  display: block;
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  background: #bf4c3a;
  border-radius: 10rpx;
  margin-top: 20rpx;
  color: #fff;
}
#dialog .section .phoneIpt {
  height: 80rpx;
  padding: 0 40rpx;
  text-align: left;
}

#dialog .section .phoneIpt input {
  height: 100%;
  border: 1px solid #dcdfe6;
  padding: 0 15rpx;
  border-radius: 10rpx;
}

#dialog .section .phoneCode {
  height: 80rpx;
  padding: 0 40rpx;
  text-align: left;
  display: flex;
  margin-top: 15rpx;
}

#dialog .section .phoneCode input {
  height: 100%;
  width: 70%;
  padding: 0 15rpx;
  border: 1px solid #dcdfe6;
  border-radius: 10rpx 0 0 10rpx;
}

#dialog .section .phoneCode input:focus {
  border: 1px solid #0068db;
}

#dialog .section .phoneCode .getCode {
  height: 100%;
  line-height: 80rpx;
  background: #0068db;
  padding: 0 2%;
  color: #fff;
  border-radius: 0 10rpx 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
#dialog .section .phoneCode .waitTime {
  height: 100%;
  line-height: 80rpx;
  background: #f7f7f7;
  padding: 0 2%;
  color: #bbb;
  border-radius: 0 10rpx 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}