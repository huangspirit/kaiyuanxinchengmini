/* pages/pay/pay.wxss */

.orderTop {
  width: 100%;
  background: #fff;
  padding: 20rpx;
  margin:10rpx auto;
}
.addAddress{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.addAddress .mark{
  width:30rpx;
  height:40rpx;
}
.orderTop .orderUser {
  margin-bottom: 10rpx;
}
.orderTop .orderUser>text {
  color: #333;
  font-weight: bold;
  font-size:30rpx;
}
.orderTop .orderAdress {
  display: flex;
  justify-content: space-between;
  font-size:24rpx;
}

.orderTop .rightArrow {
  width: 14rpx;
  height: 28rpx;
  margin-left:15rpx;
  vertical-align: middle;
}

.paylist {
  width: 100%;
  background: #fff;
  margin-bottom: 15rpx;

}

.paylist .listTop {
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #ddd;
    padding: 0 20rpx;

}

.paylist .listTop>image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  vertical-align: middle;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.paylist .listTop>text {
  line-height: 90rpx;
  color: #333;
  font-weight: bold;
  font-size: 28rpx;
}

.paylist .listContent {
  padding: 20rpx ;
  display: flex;
  border-bottom:1px dashed #ddd;
}

.paylist .listContent .listLeft {
  width: 118rpx;
  height: 118rpx;
}

.paylist .listContent .listLeft>image {
  width: 100%;
  height: 100%;
  border: 1px solid #ddd;
}

.paylist .listContent .listCenter {
  flex:1;                                                                               
  padding-left: 20rpx;
  min-width: 0;
}
.paylist .listContent .listCenter .name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
}
.paylist .listContent .listCenter .desc {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 22rpx;
  margin: 8rpx 0;
}
.paylist .listContent .listRight .listPrice{
  font-size: 20rpx;
  font-weight: bolder;
}
.paylist .listContent .listRight .listPrice .money{
  font-size:25rpx;
}
.invoice {
  display: flex;
  width: 100%;
  padding: 0 20rpx;
  height: 99rpx;
  line-height: 99rpx;
  color: #333;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 2rpx;
  justify-content: space-between;
}

.invoice>view>image {
  width: 15rpx;
  height: 26rpx;
  margin-top: -4rpx;
  vertical-align: middle;
}

.invoice>view>text {
  margin-right: 15rpx;
  color: #bbb;
}
.showmorebtn{
  text-align: right;
  background:#fff;
  margin-bottom: 20rpx;
  padding:0 20rpx 20rpx;
}
.descrition {
  width: 100%;
  padding: 0 20rpx;
  background: #fff;
  margin-top: 2rpx;
  
}
.descrition.notmore{
  height:100rpx;
  overflow: hidden;
}
.descrition.notmore>view .over{
 white-space: nowrap;
 overflow: hidden;
 text-overflow: ellipsis;
}
.descrition>view {
  padding-top:10rpx;
  width:100%;
  box-sizing: border-box;
}
.descrition>view>view{
  padding-bottom:10rpx;
}
.payDetail {
  width: 100%;
  padding: 50rpx 20rpx 0;
  background: #fff;
  margin-top: 2rpx;
  margin-bottom: 105rpx;
}

.payDetail>view {
  display: flex;
  justify-content: space-between;
}

.payDetail>view>text {
  font-size: 28rpx;
  line-height: 60rpx;
}

.payDetail>view>text:nth-of-type(1) {
  color: #bbb;
}

.payDetail>view>text:nth-of-type(2) {
  color: #df3f2f;
}

.payDetail>text {
  display: block;
  border-top: 2rpx solid #f7f7f7;
  height: 90rpx;
  line-height: 30rpx;
  text-align: right;
  color: #df3f2f;
  font-size: 32rpx;
}
.payFooter {
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  background: #fff;
}

.payFooter>view {
  width: calc(100% - 200rpx);
  display: flex;
}

.payFooter>view>image {
  width: 40rpx;
  height: 40rpx;
  margin: 30rpx 20rpx;
}

.payFooter>view>view {
  width: calc(100% - 140rpx);
  padding: 10rpx 0;
}

.payFooter>view>view>text {
  color: #6b7af8;
}

.payFooter>view>view>text:active {
  color: rgba(107, 122, 248, 0.8);
}

.payFooter>text {
  width: 200rpx;
  height: 100rpx;
  background: #df3f2f;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
}
