/* pages/pay/pay.wxss */

.orderTop {
  width: 100%;
  height: 160rpx;
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.orderTop .orderUser {
  margin-bottom: 10rpx;
}

.orderTop .orderUser>text {
  color: #333;
  font-weight: bold;
  font-size: 28rpx;
  margin-right: 15rpx;
}

.orderTop .orderAdress {
  display: flex;
  justify-content: space-between;
}

.orderTop .orderAdress>view {
  width: calc(100% - 50rpx);
  color: #999;
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding: 2rpx 0;
}

.orderTop .orderAdress>view>text {
  padding: 0 10rpx;
  border: 1px solid #df3f2f;
  color: #df3f2f;
}

.orderTop .orderAdress>image {
  width: 14rpx;
  height: 28rpx;
  margin-top: 8rpx;
}

.paylist {
  width: 100%;
  background: #fff;
  margin-bottom: 15rpx;
  padding: 0 20rpx;
}

.paylist .listTop {
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx dashed #999;
  margin-bottom: 20rpx;
}

.paylist .listTop>image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  vertical-align: middle;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.paylist .listTop>text {
  line-height: 90rpx;
  color: #333;
  font-weight: bold;
  font-size: 28rpx;
}

.paylist .listContent {
  padding: 10rpx 0;
  display: flex;
}

.paylist .listContent .listLeft {
  width: 148rpx;
  height: 148rpx;
  border: 2rpx solid #999;
}

.paylist .listContent .listLeft>image {
  width: 100%;
  height: 100%;
}

.paylist .listContent .listRight {
  width: calc(100% - 150rpx);
  padding-left: 20rpx;
}

.paylist .listContent .listRight>text:nth-of-type(1) {
  color: #333;
  font-weight: 600;
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

.paylist .listContent .listRight>text:nth-of-type(2) {
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 22rpx;
  margin: 8rpx 0;
  display: block;
}

.paylist .listContent .listRight .listLabel {
  display: flex;
  font-size: 18rpx;
  line-height: 20rpx;
}

.paylist .listContent .listRight .listLabel>text {
  color: #333;
  font-size: 18rpx;
  margin: 0 15rpx;
}

.paylist .listContent .listRight .listPrice {
  display: flex;
  justify-content: space-between;
  margin: 8rpx 0;
}

.paylist .listContent .listRight .listPrice>text:nth-of-type(1) {
  color: #df3f2f;
  font-weight: bold;
  font-size: 22rpx;
}

.paylist .listContent .listRight .listPrice>text:nth-of-type(2) {
  color: #333;
  font-weight: bold;
  font-size: 22rpx;
}

.paylist .listContent .listRight .listTax {
  display: flex;
}

.paylist .listContent .listRight .listTax>view {
  margin-right: 55rpx;
  display: flex;
}

.paylist .listContent .listRight .listTax>view>text {
  font-size: 20rpx;
  display: block;
}

.paylist .listContent .listRight .listTax>view>text:nth-of-type(1) {
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  text-align: center;
  line-height: 30rpx;
  color: #df3f2f;
  border: 2rpx solid #df3f2f;
  margin-right: 15rpx;
}

.paylist .listContent .listRight .listTax>view>text:nth-of-type(2) {
  color: #999;
  line-height: 38rpx;
}

.invoice {
  display: flex;
  width: 100%;
  padding: 0 20rpx;
  height: 99rpx;
  line-height: 99rpx;
  color: #333;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 2rpx;
  justify-content: space-between;
}

.invoice>view>image {
  width: 15rpx;
  height: 26rpx;
  margin-top: -4rpx;
  vertical-align: middle;
}

.invoice>view>text {
  margin-right: 15rpx;
  color: #bbb;
}

.desc {
  width: 100%;
  padding: 0 20rpx;
  background: #fff;
  margin-top: 2rpx;
  margin-bottom: 20rpx;
}

.desc>text {
  display: block;
  color: #bbb;
  line-height: 45rpx;
  padding: 10rpx 0;
}

.payDetail {
  width: 100%;
  padding: 50rpx 20rpx 0;
  background: #fff;
  margin-top: 2rpx;
  margin-bottom: 105rpx;
}

.payDetail>view {
  display: flex;
  justify-content: space-between;
}

.payDetail>view>text {
  font-size: 28rpx;
  line-height: 60rpx;
}

.payDetail>view>text:nth-of-type(1) {
  color: #bbb;
}

.payDetail>view>text:nth-of-type(2) {
  color: #df3f2f;
}

.payDetail>text {
  display: block;
  border-top: 2rpx solid #f7f7f7;
  height: 90rpx;
  line-height: 30rpx;
  text-align: right;
  color: #df3f2f;
  font-size: 32rpx;
}
.payFooter {
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  background: #fff;
}

.payFooter>view {
  width: calc(100% - 200rpx);
  display: flex;
}

.payFooter>view>image {
  width: 40rpx;
  height: 40rpx;
  margin: 30rpx 20rpx;
}

.payFooter>view>view {
  width: calc(100% - 140rpx);
  padding: 10rpx 0;
}

.payFooter>view>view>text {
  color: #6b7af8;
}

.payFooter>view>view>text:active {
  color: rgba(107, 122, 248, 0.8);
}

.payFooter>text {
  width: 200rpx;
  height: 100rpx;
  background: #df3f2f;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
}
