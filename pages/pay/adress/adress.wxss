/* pages/pay/adress/adress.wxss */
.top{
  padding:25rpx 20rpx;
  display:flex;
  justify-content: space-between;
  background:#fff;
  margin: 10rpx;
}
.top .rightArrow{
  width:20rpx;
  height:20rpx;
  margin-left:15rpx;
}
.addressList {
  width: 100%;
}

.addressList .listCentent {
  background: #fff;
  width: 100%;
  display: flex;
  padding: 20rpx;
  margin-bottom: 10rpx;
  align-items: center;
}
.addressList .listCentent .icon{
  font-size:35rpx;
}
.addressList .listCentent>.changePic>image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.addressList .listCentent>.changeContent {
  width: calc(100% - 60rpx);
}

.addressList .listCentent>.changeContent>view:nth-of-type(1) {
  margin: 5rpx 0;
}

.addressList .listCentent>.changeContent>view:nth-of-type(1)>text {
  color: #333;
  font-size: 30rpx;
  margin-right: 20rpx;
  font-weight: bold;
}
.addressList .listCentent>.changeContent>view:nth-of-type(2) {
  color: #bbb;
  font-size: 26rpx;
}
