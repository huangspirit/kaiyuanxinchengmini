
.nav{
  background:linear-gradient(90deg,rgba(253,208,2,1) 0%,rgba(254,190,2,1) 100%);
  position: fixed;
  z-index: 99;
  left:0;
  width:100%;
}
.nav .nav-title{
  padding:0 20rpx;
  position: relative;
  height: 46px;
  line-height: 46px;
}
.nav .nav-title .left{
  height:100%;
}
.nav .nav-title .left image{
  width:48rpx;
  height:48rpx;
  vertical-align: middle;
}
.nav .nav-title .center{
  position: absolute;
  left:0;
  top:0;
  text-align: center;
  width:100%;
  font-size:34rpx;
  line-height: 46px;
  color:#000;
}
.homeContent .top{
  position: relative;
}
.homeContent .top image{
  height:282rpx;
  width:750rpx;
  vertical-align: top;
}
.homeContent .top .hometopContent{
  position: absolute;
  top:40rpx;
  left:50%;
  transform: translateX(-50%);
  white-space: nowrap;
}
.homeContent .top .hometopContent .desc{
  font-size: 46rpx;
  color:#792E00;
}
.homeContent .top .hometopContent .navInput {
  margin:30rpx auto;
  width: 508rpx;
  height: 66rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding-left: 30rpx;
  background: #fff;
  border-radius: 66rpx;
  display: flex;
}
.homeContent .top .hometopContent .navInput>text {
  float: left;
  line-height: 66rpx;
}
.homeContent .top .hometopContent .navInput input {
  margin-left: 15rpx;
  float: left;
  width: 100%;
  height: 66rpx;
  background: #fff;
  font-size: 28rpx;
  color: #979797;
}
.classlist {
  display: flex;
  flex-wrap: wrap;
  padding-top:10rpx;
  background: #fff;
}
.classlist .subClassList{
  width:25%;
  text-align: center;
  color:#444;
  margin-top:30rpx;
  padding-bottom:40rpx;
}
.classlist .subClassList image{
  width:106rpx;
  height: 106rpx;
}
.bg{
  background: #f2f2f2;
  height: 20rpx;
}
.list{
  padding:0 20rpx;
  background: #fff;
}
.list .tit{
  font-size:34rpx;
  line-height: 94rpx;
  color:#333;
 
}
.list .listwrap{
  padding:30rpx 0;
  border-bottom:1px solid #ddd;
  display: flex;
}
.list .listwrap .left{
  width:200rpx;
  height: 150rpx;
  background: #f7f7f7;
  margin-right:25rpx;
  position: relative;
  }
  .list .listwrap .left .mark{
    position: absolute;
    left:0;
    top:0;
    width:45rpx;
    height:45rpx;
    z-index:1;
  }
  .list .listwrap .left .goodsImg{
    height: 100%;
    width:100%;
  }
  .list .listwrap .right{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .list .listwrap .right .goodsName{
    font-size:30rpx;
    color:#000;
  }
  .list .listwrap .right .desc{
    font-size:24rpx;
  }
  .list .listwrap .right .num{
    font-size:28rpx;
    color:#000;
  }
  .list .listwrap .right .num .price{
    color:#FF6200;
    font-size:30rpx;
    float: right;
  }
  .nomore{
    height:70rpx;
    line-height: 70rpx;
    text-align: center;
  }