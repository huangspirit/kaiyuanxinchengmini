<!--pages/home/home.wxml-->
<view class='homeTop'>
  <image src="../../img/home/homebg.png"></image>
  <view class="homeTitle">
    <image src='../../img/home/menu.png' bindtap="classSearch"></image>
    <text>开元芯城</text>
  </view>
  <view class="swiperPic">
    <image src='../../img/home/banner.png'></image>
    <view class='hometopContent'>
      <text>{{brandTotal}}个厂商 {{catergoryTotal}}个品类 {{productTotal}}个产品</text>
      <text>数百家厂商的选择，芯手网值得您信赖</text>
      <view class='homeInput' bindtap='toSearch'>

      </view>
    </view>
  </view>
</view>
<view style="padding:0 20rpx;">
  <view class="classList">
    <view class="subClassList" wx:for="{{classList}}" wx:key="index">
      <image src="{{item.img}}"></image>
      <text>{{item.name}}</text>
    </view>
  </view>
  <view class='specialList'>
    <view class='listHead'>
      <text>今日特价</text>
    </view>
    <scroll-view wx:if="{{specialList.length>0}}" scroll-x="true" class='listContent'>
      <view class='list_left' wx:for="{{specialList}}" bindtap="toDetail" data-item="{{item}}" wx:key="{{id}}">
        <image wx:if="{{item.goodsImageUrl!='-'}}" src='{{item.goodsImageUrl}}'></image>
        <image wx:else src='http://brand.113ic.com/6cb875d1fc454665a3e78b5ac675e391.jpg'></image>
        <text>{{item.goods_name}}</text>
        <text wx:if="{{item.priceType == true}}">￥{{item.priceLevel}}</text>
        <text wx:if="{{item.priceType == false}}"> 一口价: ￥{{item.goodsPrice}}</text>
        <text wx:if="{{item.goods_type == true}}">现 货</text>
        <text wx:if="{{item.goods_type == false}}">期 货</text>
      </view>
    </scroll-view>
    <view class="prompt" wx:if="{{specialList.length<=0}}">暂无特价</view>
  </view>
  
  <view class='specialList'>
    <view class='listHead'>
      <text>猜你需要</text>
    </view>
    <view class='faclistContent' wx:for="{{facdirect}}" wx:key="{{id}}" bindtap="toDetail" data-item="{{item}}">
      <view class='list_left'>
        <image wx:if="{{item.goodsImageUrl!='-'}}" src='{{item.goodsImageUrl}}'></image>
        <image wx:else src='http://brand.113ic.com/6cb875d1fc454665a3e78b5ac675e391.jpg'></image>
      </view>
      <view class='list_right'>
        <text>{{item.goods_name}}</text>
        <view>
          <view class='speciStatus'>
            <text>{{item.brandName}}</text>
            <text wx:if="{{item.goods_type == true}}">现 货</text>
            <text wx:if="{{item.goods_type == false}}">期 货</text>
            <text>{{item.diliverPlace}}</text>
          </view>
          <view class="price">
            <text wx:if="{{item.priceType == true}}">阶梯价</text>
            <text wx:if="{{item.priceType == false}}">一口价</text>
            <text wx:if="{{item.priceType == true}}">￥{{item.goodsPrice}}+</text>
            <text wx:if="{{item.priceType == false}}">￥{{item.goodsPrice}}</text>
          </view>

        </view>

      </view>
    </view>
    <view class="prompt" wx:if="{{facdirect.length<=0}}">暂无特价</view>
  </view>
</view>