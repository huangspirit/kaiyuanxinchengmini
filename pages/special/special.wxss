/* pages/special/special.wxss */

/* 自定义导航栏开始 */

page {
  background: #fff;
}

.custom {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  height: 100rpx;
  z-index: 999;
  background: #fff;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.custom .navInput {
  float: left;
  margin-top: 16rpx;
  width: 100%;
  height: 58rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding-left: 30rpx;
  background: #eee;
  border-radius: 40rpx;
  display: flex;
}

.custom .navInput>text {
  float: left;
  line-height: 58rpx;
}

.custom .navInput input {
  margin-left: 15rpx;
  float: left;
  width: 100%;
  height: 58rpx;
  background: #f1f1f1;
  font-size: 28rpx;
  color: #979797;
}

.specialContent {
  height: 100%;
  margin-top: 110rpx;
}

.specialContent .specialSider {
  background: #f8f8f8;
  box-sizing: border-box;
  white-space: nowrap;
}

.specialContent .specialSider>text {
  display: block;
  line-height: 80rpx;
  margin-bottom: 40rpx;
   padding: 0 40rpx;
}
.specialContent .specialSider .siderActive{
  color: #e03e31;
  background: #fff;
}
.specialContent .rightContent {
  height: 100%;
}
.specialContent .specialList {
  border-bottom: 2rpx dashed #e6e6e6;
  padding: 30rpx 0;
  box-sizing: border-box;
}
.specialContent .specialList .top{
  display: flex;
  align-items: center;
}
.specialContent .specialList .listLeft {
  width: 120rpx;
  height: 120rpx;
  border: 2rpx solid #e6e6e6;
  margin-right: 22rpx;
  float: left;
}
.specialContent .specialList .listLeft>image {
  width: 100%;
  height: 100%;
}
.specialContent .specialList .listRight{
  width: calc(100% - 142rpx);
  float: left;
}
.specialContent .specialList .listRight .goodsNameWrap{
  display: flex;
  justify-content: space-between;
}
.specialContent .specialList .listRight .goodsName {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 26rpx;
}
.specialContent .specialList .listRight .listContent{
  display: flex;
  justify-content: space-between;
  margin-bottom: 5rpx;
}
.specialContent .specialList .listRight .listContent .left{
flex:1;
}
.specialContent .specialList .listRight .listContent .right{
text-align: right;
}
.specialContent .specialList .listRight .listContent>view>text{
display: block;
margin-top: 10rpx;
}
.specialContent .specialList .listRight .listContent .brandName {
  color: #999999;
  font-size: 24rpx
}
.specialContent .specialList .listRight .listContent .goodsDeac {
  color: #333333;
  font-size: 22rpx;
}
.specialContent .specialList .listRight .listContent>view>text:nth-of-type(3) {
  color: #333333;
  font-size: 24rpx;
}
.specialContent .specialList .listRight .listContent>view>image {
  width: 50rpx;
  height: 50rpx;
}
.specialContent .specialList .saleStatus{
   font-size:24rpx;
   margin-top:12rpx;
}
.specialContent .specialList .saleStatus .left{
  display:flex;
}
.specialContent .specialList .saleStatus .right{
  float: right;
  font-size:26rpx;
}
