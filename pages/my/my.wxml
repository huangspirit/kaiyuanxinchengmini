<view class='mayTop'>
  <image src='../../img/home/homebg.png'></image>
  <text bindtap="userInfo" wx:if="{{userDetail.userTagMap.seller}}">我是卖家</text>
  <text bindtap="userInfo" wx:if="{{!userDetail.userTagMap.seller}}">我是买家</text>
  <view class="myDetail">
    <image src='{{userDetail.headImgUrl}}'></image>
    <view class="myInfo">
      <view class="myName">
        <text>{{userDetail.nickname}}</text>
        <image src='../../img/my/bianji.png'></image>
        <view>
          <image src='../../img/my/zuanshi.png'></image>
          <text>钻石</text>
        </view>
      </view>
      <view class="myPosition">
        <text wx:if="{{userDetail.userTagMap.tag == 1}}">原厂</text>
        <text wx:if="{{userDetail.userTagMap.tag == 2}}">代理商</text>
      </view>
    </view>
  </view>
