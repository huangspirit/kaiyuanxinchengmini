/* pages/my/myInquiry/components/alredyAdov/alredyAdov.wxss */

.allInquiry {
  padding: 20rpx;
}

.allInquiry .allList {
  width: 100%;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 10rpx;
}

.allInquiry .allList .listTitle {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.allInquiry .allList .listTitle .titleLeft {
  color: #333;
  font-size: 24rpx;
}

.allInquiry .allList .listTitle .titleRight .alredyAdv {
  color: #b3b3b3;
  font-size: 24rpx;
}

.allInquiry .allList .listContent {
  width: 100%;
  display: flex;
}

.allInquiry .allList .listContent .listLeft {
  width: 146rpx;
  height: 100rpx;
  margin-right: 30rpx;
}

.allInquiry .allList .listContent .listLeft>image {
  width: 100%;
  height: 100%;
}

.allInquiry .allList .listContent .listRight {
  display: flex;
  justify-content: space-between;
  width: 488rpx;
}

.allInquiry .allList .listContent .listRight .rightRight {
  width: 326rpx;
}

.allInquiry .allList .listContent .listRight .rightRight>text {
  display: block;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #999;
}

.allInquiry .allList .listContent .listRight .rightRight>text:nth-of-type(4) {
  font-size: 18rpx;
  color: #999;
}

.allInquiry .allList .listContent .listRight .rightLeft {
  text-align: right;
  display: flex;
  flex-direction: column;
  padding-top: 40rpx;
}

.allInquiry .allList .listContent .listRight .rightLeft>text {
  color: #999;
  font-size: 24rpx;
  line-height: 40rpx;
}

.allInquiry .allList .listContent .listRight .rightLeft>text:nth-of-type(2) {
  font-weight: bold;
}
.allInquiry .prompt {
  width: 100%;
  text-align: center;
  line-height: 90rpx;
}