/* pages/my/myOrder/components/waitDelivery/waitDelivery.wxss */
.myOrder {
  width: 100%;
  padding: 20rpx;
}

.myOrder .orderList {
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
}

.myOrder .orderList .listTitle {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  line-height: 90rpx;
  height: 90rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.myOrder .orderList .listTitle>text {
  color: #333;
  font-weight: bold;
}

.myOrder .orderList .listTitle>view>text:nth-of-type(1) {
  padding: 4rpx 10rpx;
  color: #fff;
  background: #df3f2f;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.myOrder .orderList .listContent {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.myOrder .orderList .listContent>.listLeft {
  width: 150rpx;
  height: 150rpx;
  box-sizing: border-box;
  border: 2rpx solid #e5e5e5;
}

.myOrder .orderList .listContent>.listLeft>image {
  width: 100%;
  height: 100%;
}

.myOrder .orderList .listContent>.listRight {
  width: calc(100% - 150rpx);
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.myOrder .orderList .listContent>.listRight>text {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.myOrder .orderList .listContent>.listRight>text:nth-of-type(1) {
  color: #333;
  font-size: 22rpx;
  font-weight: bold;
}

.myOrder .orderList .listContent>.listRight>text:nth-of-type(2) {
  color: #999;
  font-size: 22rpx;
  margin: 20rpx 0;
}

.myOrder .orderList .listFooter {
  height: 89rpx;
  border-top: 2rpx solid #e5e5e5;
  padding: 0 20rpx;
}

.myOrder .orderList .listFooter>text {
  padding: 14rpx 23rpx;
  float: right;
  background: #f7f7f7;
  color: #bbb;
  font-size: 22rpx;
  border-radius: 6rpx;
  margin-top: 13rpx;
  margin-left: 15rpx;
}

.prompt {
  width: 100%;
  text-align: center;
  line-height: 90rpx;
}