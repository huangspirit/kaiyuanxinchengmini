/* pages/my/myOrder/components/allOrder/allOrder.wxss */

.myOrder {
  width: 100%;
  padding: 20rpx;
}

.myOrder .orderList {
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
}

.myOrder .orderList .listTitle {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  padding: 0 20rpx;
  line-height: 90rpx;
  height: 90rpx;
  
}

.myOrder .orderList .listTitle>text {
  color: #333;
  font-weight: bold;
}

.myOrder .orderList .listTitle>view>text:nth-of-type(1) {
  padding: 4rpx 10rpx;
  color: #fff;
  background: #df3f2f;
  border-radius: 4rpx;
  margin-right: 10rpx;
}
.myOrder .orderList .listwrap{
  padding:20rpx;
  overflow-x: auto;
  white-space: nowrap;
  border-bottom: 2rpx solid #e5e5e5;
  border-top: 2rpx solid #e5e5e5;
}
.myOrder .orderList .listContent {
  width: 150rpx;
  display:inline-block;
}
.myOrder .orderList .listContent image {
  width: 120rpx;
  height:120rpx;
  border:1px solid #eee;
  vertical-align: middle;

} 
.myOrder .orderList .listFooter {
  height: 89rpx;
 
  padding: 0 20rpx;
}

.myOrder .orderList .listFooter>text {
  padding: 14rpx 23rpx;
  float: right;
  background: #f7f7f7;
  color: #bbb;
  font-size: 22rpx;
  border-radius: 6rpx;
  margin-top: 13rpx;
  margin-left: 15rpx;
}
.prompt {
  width: 100%;
  text-align: center;
  line-height: 90rpx;
}
