/* pages/my/walletDetail/drawDetail/drawDetail.wxss */

.bankList {
  width: 100%;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.bankList>view {
  display: flex;
  justify-content: space-between;
}
.bankList>view:nth-of-type(1) {
  margin-bottom: 10rpx;
}
.bankList>view:nth-of-type(1)>text:nth-of-type(1) {
  color: #333;
  font-size: 28rpx;
}

.bankList>view:nth-of-type(1)>.wait {
  font-size: 22rpx;
  color: #ffa944;
}

.bankList>view:nth-of-type(1)>.end {
  font-size: 22rpx;
  color: #33d051;
}

.bankList>view:nth-of-type(1)>.noPass {
  font-size: 22rpx;
  color: #eb3636;
}

.bankList>view:nth-of-type(2)>text:nth-of-type(1) {
  font-size: 20rpx;
  color: #999;
}

.bankList>view:nth-of-type(2)>text:nth-of-type(2) {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.bankNo {
  width: 100%;
  height: 400rpx;
  line-height: 400rpx;
  text-align: center;
  padding: 0 50rpx;
}
