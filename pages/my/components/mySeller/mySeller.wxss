/* pages/my/components/mySeller/mySeller.wxss */

.mySeller {
  padding: 20rpx;
}

.mySeller .sellerTop {
  display: flex;
  justify-content: space-between;
}

.mySeller .sellerTop>view {
  text-align: center;
  background: #fff;
  padding: 25rpx;
  width: 49%;
  height: 200rpx;
}

.mySeller .sellerTop>view>text {
  display: block;
  margin-bottom: 10rpx;
}

.mySeller .sellerTop>view:nth-of-type(1)>text:nth-of-type(1) {
  font-size: 36rpx;
  color: #d5a260;
}

.mySeller .sellerTop>view:nth-of-type(1)>text:nth-of-type(2) {
  font-size: 22rpx;
  color: #999;
}

.mySeller .sellerTop>view:nth-of-type(1)>text:nth-of-type(3) {
  font-size: 18rpx;
  color: #999;
}

.mySeller .sellerTop>view:nth-of-type(1)>view {
  font-size: 22rpx;
  color: #1465de;
}

.mySeller .sellerTop>view:nth-of-type(1)>view>text {
  font-size: 22rpx;
  color: #1465de;
  margin: 0 15rpx;
}
.mySeller .sellerTop>view:nth-of-type(2) {
  position: relative;
}
.mySeller .sellerTop>view:nth-of-type(2)>text:nth-of-type(1) {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.mySeller .sellerTop>view:nth-of-type(2)>text:nth-of-type(2) {
  font-size: 18rpx;
  color: #999;
  margin: 0;
}
.mySeller .sellerTop>view:nth-of-type(2)>text:nth-of-type(3) {
  font-size: 22rpx;
  color: #1465de;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.progress_box {
  position: relative;
  width: 90rpx;
  height: 90rpx;
  margin: 0 36%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.progress_bg {
  position: absolute;
  width: 90rpx;
  height: 90rpx;
}

.progress_canvas {
  width: 90rpx;
  height: 90rpx;
}

.progress_text {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
}

.progress_info {
  font-size: 18rpx;
  letter-spacing: 2rpx;
  color: #d5a260;
}
.mySeller .sellerClass {
   width: 100%;
   height: 140rpx;
   background: #fff;
   display: flex;
   justify-content: space-between;
   margin: 20rpx 0;
}
.mySeller .sellerClass>view {
  width: 25%;
  text-align: center;
  padding: 28rpx 0;
}
.mySeller .sellerClass>view>text {
  display: block;
  font-size: 24rpx;
  color: #999;
}
.mySeller .sellerClass>view>view {
  height: 40rpx;
  margin-bottom: 15rpx;
}
.mySeller .sellerClass>view>view>image {
  vertical-align: middle;
}
.mySeller .sellerClass>view:nth-of-type(1)>view>image {
    width: 40rpx;
    height: 40rpx;
}
.mySeller .sellerClass>view:nth-of-type(2)>view>image {
    width: 40rpx;
    height: 40rpx;
}
.mySeller .sellerClass>view:nth-of-type(3)>view>image {
    width: 40rpx;
    height: 30rpx;
}
.mySeller .sellerClass>view:nth-of-type(4)>view>image {
    width: 37rpx;
    height: 40rpx;
}
.mySeller .sellerList {
  width: 100%;
}
.mySeller .sellerList .listContent {
  width: 100%;
  height: 160rpx;
  background: #fff;
  margin-bottom: 15rpx;
  display: flex;
  padding: 20rpx;
}
.mySeller .sellerList .listContent .listLeft {
  width: 118rpx;
  height: 118rpx;
  margin-right: 20rpx;
  border:2rpx solid #999;
}
mySeller .sellerList .listContent .listLeft>image {
  width: 100%;
  height: 100%;
}
.mySeller .sellerList .listContent .listRight {
  width: calc(100% - 178rpx);
  height: 118rpx;
}
.mySeller .sellerList .listContent .listRight>text {
  display: block;
  margin-bottom: 5rpx;
}
.mySeller .sellerList .listContent .listRight>text:nth-of-type(1) {
  color: #df3f2f;
  font-size: 30rpx;
}
.mySeller .sellerList .listContent .listRight>text:nth-of-type(2) {
  color: #333;
  font-size: 28rpx;
}
.mySeller .sellerList .listContent .listRight>text:nth-of-type(3) {
  color: #999;
  font-size: 24rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}