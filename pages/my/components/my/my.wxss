/* pages/my/components/my/my.wxss */

.content {
  box-sizing: border-box;
  padding: 0 20rpx;
}

.myContent {
  width: 100%;
}

.myContent .myeditList {
  width: 100%;
  display: flex;
  margin-top: 20rpx;
}

.myContent .myeditList .editLeft {
  display: flex;
  width: 100%;
}

.myContent .myeditList .editLeft1 {
  display: flex;
  width: 100%;
}

.myContent .myeditList1 .editLeft {
  display: flex;
  width: 100%;
}

.myContent .myeditList .editLeft>view {
  flex: 1;
  text-align: center;
  background: #fff;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.myContent .myeditList .editLeft>view>view {
  height: 46rpx;
}

.myContent .myeditList .editLeft1>view {
  flex: 1;
  text-align: center;
  background: #fff;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.myContent .myeditList .editLeft view:nth-of-type(1) image {
  width: 40rpx;
  height: 40rpx;
}

.myContent .myeditList .editLeft view:nth-of-type(2) image {
  width: 44rpx;
  height: 32rpx;
}

.myContent .myeditList .editLeft view:nth-of-type(3) image {
  width: 42rpx;
  height: 29rpx;
}

.myContent .myeditList .editLeft view:nth-of-type(4) image {
  width: 37rpx;
  height: 39rpx;
}

.myContent .myeditList .editLeft view>text {
  display: block;
  color: #999;
  margin-top: 12rpx;
}

.myContent .myeditList .editLeft1 view>text {
  display: block;
  color: #999;
  margin-top: 8rpx;
}

.myContent .myeditList .editLeft1 view:nth-of-type(1) image {
  width: 38rpx;
  height: 42rpx;
}

.myContent .myeditList .editLeft1 view:nth-of-type(2) image {
  width: 38rpx;
  height: 42rpx;
}

.myContent .myeditList .editLeft1 view:nth-of-type(3) image {
  width: 42rpx;
  height: 42rpx;
}

.myContent .myeditList .editLeft1 view:nth-of-type(4) image {
  width: 42rpx;
  height: 42rpx;
}

.myContent .myeditList .editRight {
  text-align: center;
  width: 175rpx;
  height: 140rpx;
  background: #fff;
  margin-left: 4rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  position: relative;
}

.myContent .myeditList:nth-of-type(1) .editRight>image {
  width: 31rpx;
  height: 36rpx;
}

.myContent .myeditList:nth-of-type(2) .editRight>image {
  width: 36rpx;
  height: 36rpx;
}

.myContent .myeditList .editRight text {
  display: block;
  color: #999;
  margin-top: 12rpx;
}

.myContent .myeditList .editRight text:nth-of-type(2) {
  position: absolute;
  background: #dd402d;
  width: 24rpx;
  height: 24rpx;
  border-radius: 24rpx;
  top: -2rpx;
  right: 36rpx;
  font-size: 13rpx;
  color: #fff;
  text-align: center;
  line-height: 24rpx;
}

.delivery {
  width: 100%;
  margin-top: 20rpx;
  padding: 20rpx 16rpx 20rpx 32rpx;
  background: #fff;
  height: 160rpx;
}

.delivery .deliveryLeft {
  width: 120rpx;
  height: 120rpx;
  float: left;
}

.delivery .deliveryLeft>image {
  width: 100%;
  height: 100%;
}

.delivery .deliveryRight {
  box-sizing: border-box;
  padding-left: 20rpx;
  float: left;
  width: calc(100% - 120rpx);
}

.delivery .deliveryRight>text {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.delivery .deliveryRight>text:nth-of-type(1) {
  color: #df3f2f;
  font-size: 28rpx;
}

.delivery .deliveryRight>text:nth-of-type(2) {
  color: #323232;
  font-size: 27rpx;
  margin: 10rpx 0;
}

.delivery .deliveryRight>text:nth-of-type(3) {
  color: #999;
  font-size: 22rpx;
}

.myFocus {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.myFocus >view {
  text-align: center;
  background: #fff;
  flex: 1;
  padding: 33rpx 0;
}

.myFocus >view:nth-of-type(3) {
  margin-left: 4rpx;
}

.myFocus >view>text {
  display: block;
}

.myFocus >view>text:nth-of-type(1) {
  color: #e03e31;
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.myFocus >view>text:nth-of-type(2) {
  color: #323232;
  font-size: 22rpx;
}

.myFocus >view>image {
  width: 46rpx;
  height: 39rpx;
}

.myFocus >view:nth-of-type(3)>text {
  color: #999;
  font-size: 22rpx;
  margin-bottom: 0;
}

.mylistContent {
  white-space: nowrap;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.mylistContent .list_left {
  min-width: 166rpx;
  height: 166rpx;
  margin-right: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: inline-block;
  text-align: center;
  border-radius: 10rpx;
  background: #fff;
  overflow: hidden;
  position: relative;
}

.mylistContent .list_left>image {
  width: 100%;
  height: 100%;
  background: rgba(243, 243, 243, 1);
  border-radius: 8px;
}
