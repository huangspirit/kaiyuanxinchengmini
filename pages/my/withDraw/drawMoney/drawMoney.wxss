/* pages/my/withDraw/drawMoney/drawMoney.wxss */

.walletMoney {
  width: 100%;
  padding: 20rpx;
  color: #df3f2f;
  font-size: 30rpx;
  font-weight: bold;
  background: #fff;
}

.drawContent {
  width: 100%;
  margin-top: 10rpx;
  background: #fff;
  padding: 20rpx;
}

.drawContent>input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #e5e5e5;
  padding: 0 15rpx;
}

.drawContent>view>view>text:nth-of-type(2) {
  color: #df3f2f;
}

.drawFooter {
  width: 100%;
  padding: 20rpx;
}

.drawFooter>text {
  width: 100%;
  display: block;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  background: #df3f2f;
  color: #fff;
  font-size: 30rpx;
}

.drawFooter>text:active {
  background: rgba(223, 63, 47, 0.8);
}

.drawDesc {
  width: 100%;
  padding: 20rpx;
}

.drawDesc>view {
  font-size: 28rpx;
  color: #df3f2f;
  margin-bottom: 15rpx;
}

.drawDesc>text {
  display: block;
  color: #999;
  line-height: 45rpx;
}
