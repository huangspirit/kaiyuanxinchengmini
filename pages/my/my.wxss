.myHeader {
  width: 100%;
  padding: 33rpx 0 0 0;
  position: fixed;
  background: #fff;
  top: 0;
  z-index: 10;
  height: 130rpx;
  line-height: 105rpx;
}
.myHeader>image {
  position: absolute;
  left: 20rpx;
  bottom: 27rpx;
  width: 30rpx;
  height: 40rpx;
}

.myHeader>text {
  display: block;
  width: 100%;
  text-align: center;
}

.mayTop {
  height: 265rpx;
  width: 100%;
  position: relative;
  overflow: hidden;
  margin-top: 130rpx;
}
.mayTop .topwrap{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:264rpx;
  z-index:1;
  display: flex;
}
.mayTop>image {
  width:100%;
  height: 264rpx;
}
.mayTop .setbtn text{
  color:#fff;
  font-size:30rpx;
}
.mayTop .topwrap .myDetail {
  padding: 0 40rpx;
  display: flex;
  margin: 30rpx 0 20rpx 0;
  flex:1;
}

.mayTop .topwrap .myDetail>image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 22rpx;
  background: #fff;
}

.mayTop .topwrap .myDetail .myInfo {
  color: #fff;
  padding: 25rpx 0;
}

.mayTop .topwrap  .myInfo .myName {
  display: flex;
}
.mayTop .topwrap .myInfo .myName>text {
  margin-right: 10rpx;
}

.mayTop .topwrap  .myInfo .myName>image {
  width: 23rpx;
  height: 24rpx;
  margin-top: 9rpx;
  vertical-align: middle;
}

.mayTop .topwrap  .myInfo .myName>view {
  width: 80rpx;
  background: #bf4c3a;
  margin-left: 10rpx;
  padding: 7rpx 10rpx;
  line-height: 20rpx;
  border-radius: 30rpx;
}

.mayTop .topwrap  .myInfo .myName>view>text {
  font-size: 17rpx;
}

.mayTop .topwrap  .myInfo .myName>view>image {
  width: 17rpx;
  height: 17rpx;
  vertical-align: middle;
  margin-right: 5rpx;
}

.mayTop .topwrap  .myInfo>.myPosition>text {
  padding: 7rpx 10rpx;
  height: 30rpx;
  background: #bf4c3a;
  line-height: 30rpx;
  text-align: center;
  font-size: 17rpx;
  border-radius: 30rpx;
  margin-right: 10rpx;
}
.mayTop .toplist{
  display: flex;
}
.mayTop .toplist>view{
  flex:1;
}
.mayTop .moneyDetail {
  padding: 0 20rpx;
  height: 90rpx;
}

.mayTop .moneyDetail>view {
  display: flex;
  justify-content: space-around;
  position: relative;
  height: 100%;
  overflow: hidden;
  padding: 15rpx 0;
}

.mayTop .moneyDetail>view>image {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: -1;
  width: 100%;
  height: 90rpx;
}

.mayTop .moneyDetail>view>view {
  color: #ffea00;
  font-size: 28rpx;
}
.classity{
  display: flex;
  margin:0 20rpx;
  margin-top:20rpx;
  background:#fff;
  border:1px solid #eee;
}
.classity .one{
  flex:1;
  text-align:center;
  height:150rpx;
  line-height: 150rpx;
  font-size:30rpx;
  
}
