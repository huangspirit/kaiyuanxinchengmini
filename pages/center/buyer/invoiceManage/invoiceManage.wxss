/* pages/my/invoiceManage/invoiceManage.wxss */

.myFocus {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;
}

.myFocus .title {
  width: 100%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 20rpx 0;
}

.myFocus .titleSel {
  color: #333;
  font-size: 32rpx;
}

.myFocus .headerLineSel {
  color: #df3f2f;
}

.myFocus.headerLineUnsel {
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.myFocus .swiper {
  width: 100%;
  flex: 1;
  height: calc(100vh - 128rpx);
  overflow: scroll;
}
