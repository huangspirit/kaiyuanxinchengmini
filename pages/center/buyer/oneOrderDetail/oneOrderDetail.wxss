/* pages/center/buyer/oneOrderDetail/oneOrderDetail.wxss */

.process {
  max-height: 500rpx;
  overflow-y: auto;
  padding: 20rpx 0;
}

.process view {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
}
.order .one{
  background: #fff;
  margin-bottom:20rpx;
}
.order .top{
  display: flex;
  align-items: center;
  padding:20rpx;
  font-weight: bolder;
  font-size:30rpx;
}
.order .top .headerImg{
  height:70rpx;
  width:70rpx;
  overflow: hidden;
  border-radius: 70rpx;
  margin-right:18rpx;
}
.order .top .headerImg image{
  width:100%;
  height:100%;
}
.order .one .listone{
  border-top:1rpx solid #ddd;
  padding:20rpx;
}
.order .one .listone .wrap{
  display: flex;
  padding-bottom:20rpx;
}
.order .one .listone .wrap .left image{
  width:230rpx;
  height:150rpx;
}
.order .one .listone .wrap .right{
  margin-left:15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex:1;
}
.order .one .listone .wrap .right .price{
  font-size:30rpx;
}
.order .one .listone .bottom{
  text-align: right;
  border-top:1rpx solid #ddd;
}
.order .one .listone .bottom button{
  margin-top:15rpx;
  margin-left:10rpx;
}
.conact {
  background: #fff;
  line-height: 90rpx;
  height: 90rpx;
  text-align: center;
  font-size: 30rpx;
}

.detail {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
}

.detail>view {
  margin: 10rpx 0;
  display: flex;
}
.detail .paytype text{
  margin-right:25rpx;
}
.bill {
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(90deg, rgba(255, 208, 0, 1) 0%, rgba(255, 189, 0, 1) 100%);
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.total {
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
}

.total .top {
  font-weight: bold;
  font-size: 30rpx;
  line-height: 90rpx;
  border-bottom:1rpx solid #ddd;
  padding:0 20rpx;
}

.total .top .orange {
  float: right;
}
.total .middle{
  padding:20rpx 0;
  line-height: 45rpx;
}
.total .middle .item .left{
  display: inline-block;
  width:250rpx;
  text-align: right;
}
.total .middle .item .right{
  float: right;
  padding-right:20rpx;
}
.footerDesc{
  padding:20rpx;
}
.footer{
  position: fixed;
  bottom:0;
  left:0;
  background: #fff;
  border-top:1rpx solid #ddd;
  z-index:1;
  width:100%;
  padding:15rpx 20rpx 0;
  text-align: right;
}
.footer button{
  margin-left:15rpx;
  margin-bottom:15rpx;
}