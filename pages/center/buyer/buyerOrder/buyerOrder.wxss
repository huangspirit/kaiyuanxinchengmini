/* pages/center/buyer/buyerOrder/buyerOrder.wxss */

.timelist {
  display: flex;
  text-align: center;

}

.timelist .one {
  flex: 1;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
}

.timelist .one text {
  border-bottom: 2px solid transparent;
}

.timelist .active text {
  color: #ffbd00;
  border-color: #ffbd00;
}
.typelist{
  display: flex;
  text-align: center;
  justify-content: space-between;
  padding:0 10rpx;
}
.typelist .one {
  background: none;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}
.typelist text {
  border-radius: 40rpx;
  display: inline-block;
  line-height: 40rpx;
  vertical-align: middle;
  padding:0 10rpx;
}
.typelist .active0 text {
  background: linear-gradient(90deg, rgba(255, 208, 0, 1) 0%, rgba(255, 189, 0, 1) 100%);
}

.orderlist .bigone {
  margin-bottom: 20rpx;
  background: #fff;
}

.orderlist .bigone .tit {
  padding: 20rpx;
}

.orderlist .bigone .tit text {
  font-size: 24rpx;
  margin-right:10rpx;
  white-space: nowrap;
}
.orderlist .bigone .tit .month{
  border:1px solid #FF6200;
  color:#FF6200;
  padding:0 5rpx;
  border-radius: 5rpx;
}
.orderlist .bigone .tit .nomonth{
  color:#00C99C;
  border:1px solid #00C99C;
  padding:0 5rpx;
  border-radius: 5rpx;
  }
  .orderlist .bigone .tit .status{
    font-size:28rpx;
    float: right;
  }
.orderlist .bigone .process {
  display: flex;
  padding: 20rpx;
  background: #f5f5f5;
  align-items: center;
}
.orderlist .bigone .process image {
  width: 63rpx;
  height: 45rpx;
}

.orderlist .bigone .process .right {
  flex: 1;
  width: 0;
  margin-left: 10rpx;
  font-size:24rpx;
  line-height: 35rpx;
}
.orderlist .bigone .process .right .desc {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.orderlist .bigone .infodetail {
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
  display: flex;
}

.orderlist .bigone .infodetail .left {
  flex:1;
  overflow-x: auto;
  white-space: nowrap;
}

.orderlist .bigone .infodetail .left .wrap {
  height: 130rpx;
  width: 130rpx;
  border-radius: 130rpx;
  overflow: hidden;
  padding: 2rpx;
  border: 1px solid #ddd;
  display: inline-block;
  margin-right:20rpx;
}

.orderlist .bigone .infodetail .left image {
  width: 100%;
  height: 100%;
}
.orderlist .bigone .infodetail .right{
  padding-left:20rpx;
}
.orderlist .bigone .infodetail .right view{
  font-size:24rpx;
}
.orderlist .bigone .infodetail .right .totalPrice{
    font-size:30rpx;
}
.btnwrap {
  padding: 20rpx;
  text-align: right;
}

.btnwrap button {
  margin-left:15rpx;
  margin-bottom:15rpx;
}

.nomore{
  text-align: center;
  padding-bottom:20rpx;
}