/* pages/myEdit/myEdit.wxss */
.userInfo{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 15rpx;
  height: 180rpx;
  box-sizing: border-box;
}
.userInfo>image{
  width: 24rpx;
  height: 40rpx;
  margin-top: 50rpx;
}
.userInfo .userInfoDetail{
  display: flex;
}
.userInfo .userInfoDetail>image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
  margin-right: 20rpx;
}
.userInfo .userInfoDetail>view {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
}
.userInfo .userInfoDetail>view>text {
  font-weight: bold;
  font-size: 34rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.userInfo .userInfoDetail>view>view {
  display: flex;
}
.userInfo .userInfoDetail>view>view>view {
  display: flex;
  height: 30rpx;
  padding: 0 10rpx;
  background: #cccccc;
  color: #fff;
  font-size: 18rpx;
  border-radius: 4rpx;
  margin-right: 15rpx;
}
.userInfo .userInfoDetail>view>view>view>image {
  width: 16rpx;
  height: 16rpx;
  vertical-align: middle;
}
.userInfo .userInfoDetail>view>view>text {
  width: 100rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  color: #fff;
  background: #cccccc;
  font-size: 18rpx;
  border-radius: 4rpx;
}
.userInfoList {
  width: 100%;
}

.userInfoList>view {
  display: flex;
  width: 100%;
  padding: 0 20rpx;
  height: 99rpx;
  line-height: 99rpx;
  color: #333;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 2rpx;
  justify-content: space-between;
}
.userInfoList>view>image {
  width: 15rpx;
  height: 26rpx;
  margin-top: 35rpx;
}
.userInfoList>view>view>text {
  margin-right: 15rpx;
  color: #bbb;
}
.userInfoList>view>view>image {
  width: 15rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-top: -5rpx;
}
.userInfoFooter {
  padding: 20rpx;
}

.userInfoFooter>text {
  display: block;
  width: 100%;
  height: 90rpx;
  background: #df3f2f;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
}
