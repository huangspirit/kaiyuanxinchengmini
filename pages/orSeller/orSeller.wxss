.brandPic {
  width: 100%;
  height: 375rpx;
  display: flex;
  padding: 20rpx;
}

.brandPic >image {
  width: 100%;
  height: 100%;
}

.brandComponey {
  margin-bottom: 10rpx;
}

.brandComponey .brandTitle {
  font-size:30rpx;
  font-weight: bolder;
  background:#fff;
  padding:10rpx;
  border-bottom:1px solid #ddd;
}
.brandDetail {
  background: #fff;
  padding: 10rpx 20rpx;
}
.brandDetail .desc{
   line-height: 1.7;
}
.brandDetail .descText {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.brandDetail >.btn{
  text-align: right;
  padding:10rpx;
}
.goodslist{
  padding:20rpx 0;
}
.goodslist .title{
  font-size:30rpx;
  font-weight: bolder;
  background:#fff;
  padding:10rpx;
  border-bottom:1px solid #ddd;
}
.goodslist > .list{
  display:flex;
  flex-wrap: wrap;
  padding:20rpx;
}
.goodslist .list .oneitem{
  width:48.5%;
  margin-right:3%;
  background:#fff;
  margin-bottom:3%;
  padding:20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  position: relative;
  box-shadow: 0 0 10rpx 3rpx #ddd;
}
.goodslist .list .oneitem:nth-of-type(even){
  margin-right:0;
}
.goodslist .list .oneitem .imgWrap{
  text-align: center;
  
}
.goodslist .list .oneitem .imgWrap image{
  height:250rpx;
  width:250rpx;
}
.goodslist .list .oneitem .name{
  font-size:28rpx;
}
.goodslist .list .oneitem .desc{
  font-size:20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  margin:10rpx 0;
  white-space: nowrap;
}
.goodslist .list .oneitem .mark{
  font-size:20rpx;
  margin-left:10rpx;
}
.goodslist .list .oneitem .price{
  font-weight: bolder;
}
.goodslist .list .oneitem .goodsTypeMark{
  position: absolute;
  left:0;
  top:0;
  padding:0 10rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
}
.goodslist .nocommit{
  text-align: center;
  line-height: 100rpx;
}
.goodslist .commitlist .oneitem{
  display:flex;
  margin-top:20rpx;
  background: #fff;
  padding:10rpx;
}
.goodslist .commitlist .oneitem .header image{
  width:70rpx;
  height: 70rpx;
  border-radius: 70rpx;
 
}

.goodslist .commitlist .oneitem .list{
  margin-left:20rpx;
  flex:1;
}
.goodslist .commitlist .oneitem .list .tit{
  margin-bottom:10rpx;
}
.goodslist .commitlist .oneitem .tit .time{
  font-size:22rpx;
  margin-left:10rpx;
}
.goodslist .commitlist .oneitem .list .img{
  width:30%;
  height:180rpx;
  margin-top:10rpx;
  margin-right:10rpx;
}
.goodslist .commitlist .oneitem .list .reply{
  padding:10rpx;
  margin-top:20rpx;
}
.goodslist .commitlist .oneitem .list .reply .tit{
  margin-bottom:10rpx;
}
.cateWrap{
  padding:10rpx 20rpx;
}
.cateWrap .first{
   margin:15rpx 0;
}
.cateWrap .secondCate{
  display:flex;
  flex-wrap: wrap;
 
}
.cateWrap .secondCate .borderGreen{
  padding:5rpx 15rpx;
  margin-bottom:15rpx;
  width:32%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-right:2%;
  line-height: 1;
}
.cateWrap .secondCate .nomargin{
  margin-right: 0;
}