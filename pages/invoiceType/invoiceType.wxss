/* pages/invoiceType/invoiceType.wxss */

.invoiceNotice {
  width: 100%;
  height: 90rpx;
  background: #f1d1cd;
  padding: 16rpx 20rpx;
  color: #333;
  font-size: 22rpx;
  margin-bottom: 20rpx;
}

.invoiceType {
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
}

.invoiceType>text {
  display: block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #333;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.invoiceType>view {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.invoiceType>view>image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  vertical-align: middle;
  margin-top: -8rpx;
}

.invoiceType>view>text {
  font-size: 28rpx;
}

.invoiceInfo {
  width: 100%;
  margin-bottom: 20rpx;
}

.invoiceInfo>.invoiceTitle {
  display: flex;
  width: 100%;
  padding: 0 20rpx;
  height: 99rpx;
  line-height: 99rpx;
  color: #333;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 2rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid #e5e5e5;
}

.invoiceInfo>.listContent {
  margin: 20rpx 20rpx 0;
}

.invoiceInfo>.listContent>view {
  display: flex;
  width: 100%;
  padding: 0 20rpx;
  height: 99rpx;
  line-height: 99rpx;
  color: #333;
  font-size: 28rpx;
  background: #fff;
  justify-content: space-between;
}

.invoiceInfo>.listContent>view>view>text {
  margin-right: 15rpx;
  color: #bbb;
}

.invoiceInfo>.listContent>view>view>image {
  width: 15rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-top: -5rpx;
}

.invoiceInfo>.listContent .useInvoice {
  height: 50rpx;
  line-height: 50rpx;
  padding: 0;
}

.invoiceInfo>.listContent .useInvoice>text {
  width: 125rpx;
  height: 50rpx;
  border-radius: 0 0 25rpx 0;
  color: #fff;
  font-size: 22rpx;
  text-align: center;
}

.invoiceInfo> .changeInvoice {
  border: 1px solid #df3f2f;
}

.invoiceBtn {
  width: 100%;
  height: 90rpx;
  padding: 0 20rpx;
}

.invoiceBtn>text {
  width: 100%;
  height: 100%;
  display: block;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  background: #df3f2f;
  margin-bottom: 20rpx;
}
