/* pages/classSearch/classSearch.wxss */

page {
  background: #fff;
}

.classSearchTop {
  width: 100%;
  height: 100rpx;
  background: #e5e5e5;
  padding: 20rpx 30rpx;
}

.classSearchTop input {
  width: 100%;
  height: 60rpx;
  background: #fff;
  border-radius: 60rpx;
  padding: 0 25rpx;
}

.classList {
  padding: 10rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.classList>view {
  width: 48%;
  margin-right: 4%;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 20rpx;
  background: #f5f5f5;
  padding: 0 60rpx;
}

.classList>view:nth-of-type(2n) {
  margin-right: 0;
}

.classList>view>image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 35rpx;
  vertical-align: middle;
}
