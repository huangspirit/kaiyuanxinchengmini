.productDetailPic swiper{
  height:480rpx;
  background: #fff;
}
.productDetailPic .swiperitem{
  line-height: 480rpx;
}
.productDetailPic .swiperitem image{
  height:480rpx;
  width:600rpx;
}
 .saleTime{
  font-weight: bolder;
  font-size:30rpx;
}
.sellerDesc{
  color:#fff;
  display: flex;
  padding-bottom:20rpx;
  background: #f2f2f2;
}
.sellerDesc .left{
  padding:20rpx;
  flex:1;
  background: linear-gradient(90deg,rgba(248,82,0,1) 0%,rgba(255,12,0,1) 100%);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size:30rpx;
}
.sellerDesc .left .levLeft .num{
  width:100rpx;
  display: inline-block;
}
.sellerDesc .middle{
  border-left:none;
  border-right:20rpx solid #f2f2f2;
  border-top:90rpx solid #FF0C00;
  border-bottom:90rpx solid #FF0C00;
}
.sellerDesc .right{
  width:300rpx;
  background: #f2f2f2;
  display: flex;
  color:#000;
  text-align: center;
}
.sellerDesc .right .top{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.sellerDesc .right image{
  width:30rpx;
  height:30rpx;
}
.goodsName{
  background: #fff;
  line-height: 116rpx;
  font-size:30rpx;
  color:#333;
  border-bottom:1px solid #ddd;
  padding:0 20rpx;
  font-weight: bold;
}
.goodsName .isAgent{
  background: #FFBD00;
  color:#000;
  height:35rpx;
  line-height: 35rpx;
  width:60rpx;
  text-align: center;
  display: inline-block;
  border-radius: 5rpx;
  font-size: 20rpx;
  margin-right: 15rpx;
  font-weight: normal;
}
