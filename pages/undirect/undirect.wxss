.productContent .productList {
  background: #fff;
  height: 100%;
  overflow-y: scroll;
  
  
}
.productContent .noData {
  /* width: calc(100% - 180rpx); */
  background: #fff;
  overflow-y: scroll;
  text-align: center;
}

.brandHot {
  border-bottom:1rpx solid #ddd;
  padding:20rpx;
}
.brandHot .wrap{
  display: flex;
}
.brandHot .list_left {
  width: 120rpx;
  height: 120rpx;
  box-sizing: border-box;
  border: 2rpx solid #f7f7f7;
}

.brandHot .list_left image {
  height: 100%;
  width: 100%;
  background: rgba(243, 243, 243, 1);
  border-radius: 8px;
  vertical-align: middle;
}
.brandHot .list_right {
  padding: 0 27rpx;
  flex: 1;
}
.brandHot .list_right .tit{
  display:flex;
}
.brandHot .list_right .tit .name{
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.brandHot .list_right .cont{
  display: flex;
  font-size:20rpx;
}
.brandHot .list_right .cont .brand{
  margin-bottom:5rpx;
}
.brandHot .list_right .cont .btnwrap{
  margin:15rpx 0;
}
.brandHot .list_right .cont .btnwrap text{
  margin-right: 10rpx;
  padding:5rpx 10rpx;
  border-radius: 5rpx;
}
.brandHot .list_right .ofer{
  font-size:22rpx;
  margin-top:8rpx;
  display:flex;
}
.brandHot .list_right .ofer .price{
  flex:1;
  font-weight: bolder;
  font-size:26rpx;
}