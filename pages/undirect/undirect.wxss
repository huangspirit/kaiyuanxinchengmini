page {
  background: #fff;
  
}

.productSearch {
  width: 100%;
  height: 98rpx;
  border-top: 2rpx solid #f7f7f7;
  border-bottom: 2rpx solid #f7f7f7;
  margin-bottom: 20rpx;
  padding: 16rpx 30rpx;
  box-sizing: border-box;
  position: fixed;
  background:#fff;
  z-index:1;
}
.productSearch>input {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #f7f7f7;
  border-radius: 60rpx;
}
.title{
  width:100%;
  display: flex;
  padding:0 15rpx ;
  padding-top:98rpx;
}
.title .left{
  overflow-x: auto;
  white-space: nowrap;
  display:flex;
  flex:1;
}
.title .left view{
  white-space: nowrap;
  padding:30rpx 25rpx ;
}
.title .left .siderActive{
  color: #df3f2f;
}
.title .right{
  padding:30rpx 25rpx;
}
.coverItem{
  position: fixed;
  z-index:1;
  bottom:0;
  top:98rpx;
  left:0;
  right:0;
  background:rgba(0,0,0,0.5);
  
}
.coverItem .list{
    width:80%;
    background:#fff;
    float: right;
    height:100%;
    padding:20rpx;
   box-sizing: border-box;
  }
  .coverItem .list .item{
    margin-top:15rpx;
    text-align: center;
    width:50%;
    overflow: hidden;
    display:inline-block;
  }
.coverItem .list .item>view{
    padding:5rpx 25rpx;
    border:1rpx solid #ddd;
    border-radius: 3rpx;
    box-sizing: border-box;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width:95%;
  }
  .coverItem .list .item .nomargin{
    width:100%;
  }
