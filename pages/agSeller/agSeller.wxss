.top{
  display:flex;
  align-items: center;
  padding:10rpx;
}
.top image{
  width:150rpx;
  height:150rpx;
  overflow: hidden;
  border-radius: 150rpx;
}
.top .cont{
  flex:1;
  height:100%;
  padding:20rpx;
}
.top .cont .name{
  font-size:30rpx;
  margin-bottom:20rpx;
}
.top .cont .name>.time{
  font-size:22rpx;
  margin-left:15rpx;
}
.top .cont .scoreone view{
  display:inline-block;
}
.goodslist{
  padding:20rpx 0;
}

.goodslist .title{
  font-size:30rpx;
  font-weight: bolder;
  background:#fff;
  padding:10rpx;
  border-bottom:1px solid #ddd;
}
.goodslist .brand{
  display: flex;
  flex-wrap: wrap;
}
.goodslist .brand>view{
  width:50%;
  padding:20rpx;
  box-sizing: border-box;
}
.goodslist .brand>view image{
  height: 167rpx;
}
.goodslist > .list{
  display:flex;
  flex-wrap: wrap;
  padding:20rpx;
}
.goodslist .list .oneitem{
  width:48.5%;
  margin-right:3%;
  background:#fff;
  margin-bottom:3%;
  padding:20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  position: relative;
  box-shadow: 0 0 10rpx 3rpx #ddd;
}
.goodslist .list .oneitem:nth-of-type(even){
  margin-right:0;
}
.goodslist .list .oneitem .imgWrap{
  text-align: center;
  
}
.goodslist .list .oneitem .imgWrap image{
  height:250rpx;
  width:250rpx;
}
.goodslist .list .oneitem .name{
  font-size:28rpx;
}
.goodslist .list .oneitem .desc{
  font-size:20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  margin:10rpx 0;
}
.goodslist .list .oneitem .mark{
  font-size:20rpx;
  margin-left:10rpx;
}
.goodslist .list .oneitem .price{
  font-weight: bolder;
}
.goodslist .list .oneitem .goodsTypeMark{
  position: absolute;
  left:0;
  top:0;
  padding:0 10rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
}
.goodslist .commitlist .nocommit{
  text-align: center;
  line-height: 100rpx;
}
.goodslist .commitlist .oneitem{
  display:flex;
  margin-top:20rpx;
  background: #fff;
  padding:10rpx;
}
.goodslist .commitlist .oneitem .header image{
  width:70rpx;
  height: 70rpx;
  border-radius: 70rpx;
 
}

.goodslist .commitlist .oneitem .list{
  margin-left:20rpx;
  flex:1;
}
.goodslist .commitlist .oneitem .list .tit{
  margin-bottom:10rpx;
}
.goodslist .commitlist .oneitem .tit .time{
  font-size:22rpx;
  margin-left:10rpx;
}
.goodslist .commitlist .oneitem .list .img{
  width:30%;
  height:180rpx;
  margin-top:10rpx;
  margin-right:10rpx;
}
.goodslist .commitlist .oneitem .list .reply{
  padding:10rpx;
  margin-top:20rpx;
}
.goodslist .commitlist .oneitem .list .reply .tit{
  margin-bottom:10rpx;
}
.selectitem .tit{
  display: flex;
}
.selectitem .name{
  flex:1;
}
.selectitem .btn{
  width:80rpx;
}
.selectitem .allitem{
  position: fixed;
  z-index: 1;
  left:0;
  right:0;
  top:0;
  bottom:0;
  background: rgba(0,0,0,0.5);
}
.selectitem .allitem .cont{
  background:#fff;
  width:90%;
  margin-left:10%;
  margin-top:1px;
  height:100%;
  }
  .selectitem .allitem .cont .item{
    padding:20rpx;
  }
  .selectitem .allitem .cont .titl{
    font-weight: bolder;
    margin-bottom:25rpx;
  }
  .selectitem .allitem .cont .list{
    width:100%;
    box-sizing: border-box;
  }
  .selectitem .allitem .cont .list>view{
    width:30%;

    margin-right:3%;
    display: inline-block;
    text-align: center;
    font-weight: normal;
    font-size:26rpx;
    margin-bottom:10rpx;
   
  }
  .selectitem .allitem .cont .list>view>text{
      border:1px solid #f7f7f7;
      display: inline-block;
      width: 100%;
      box-sizing: border-box;
      height:60rpx;
      line-height: 60rpx;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
  }
  .selectitem .allitem .cont .list .nomargin{
    margin-right:0;
  }
  .selectitem .allitem .bottom{
    display:flex;
    justify-content: center;
    margin-top:20rpx;
    padding:20rpx;
    border-top:1px solid #f7f7f7;
  }
  .selectitem .allitem .bottom view{
      width:35%;
      text-align: center;
      border-radius: 55rpx;
      height:55rpx;
      line-height: 55rpx;
      border: 1px solid #f7f7f7;
      margin-right:20rpx;
  }
  .selectitem .allitem .item input{
    border:1px solid #f7f7f7;
    height:40rpx;
    line-height: 40rpx;
    width:80%;
    padding:0 15rpx;
  }
  .borderColor{
    border-color:#df3f2f!important;
  }