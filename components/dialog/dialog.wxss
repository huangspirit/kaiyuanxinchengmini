/* components/dialog/dialog.wxss */

/* 蒙层 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/* 弹框 */

.modal-dialog {
  font-size: 30rpx;
  width: 560rpx;
  position: fixed;
  top: 30%;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 1500;
  background: #fff;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
}

.m-title {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  align-self: stretch;
  font-size: 36rpx;
}

.m-info {
  font-size: 28rpx;
  text-align: left;
  color: #888;
  flex: 1;
  padding:0 20rpx;
}

.m-avatur {
  width: 120rpx;
  height: 120rpx;
  border: 1rpx solid #eee;
  border-radius: 50%;
}

.m-name {
  margin-top: 10rpx;
  font-size: 30rpx;
}

.m-star {
  display: flex;
  width: 190rpx;
  margin: 20rpx auto 0;
}

.m-phone {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #888;
}

.modal-footer {
  display: flex;
  height: 100rpx;
  border-top: 1rpx solid #e5e5e5;
  margin-top: 30rpx;
}

.modal-footer .btn-footer {
  width: 280rpx;
  font-size: 30rpx;
  color: #02bb00;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-footer .btn-l-footer {
  border-right: 1rpx solid #e5e5e5;
  color:#999;
}
.unConfirm{
  text-align: center;
  padding:20rpx;
  margin: 20rpx;
}
.unConfirm  .btn-footer text{
    border:1px solid #02bb00;
    padding:6rpx 25rpx;
    border-radius: 5rpx;
    font-size:28rpx;
}